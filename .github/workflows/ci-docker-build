name: Docker Image CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    types: [opened, edited]

jobs:
  build_and_push:
    runs-on: alpine-latest  # Using a lightweight Alpine Linux image instead of Ubuntu
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 2

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v1

      - name: Login to Docker Hub
        uses: docker/login-action@v1
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Build and Push Frontend Image
        uses: docker/build-push-action@v2
        with:
          context: ./frontend
          file: ./frontend/Dockerfile
          push: true
          tags: docker.io/rajsomesetty/app-frontend:frontend-${{ github.run_id }}

      - name: Verify Pushed Images
        run: |
          docker pull docker.io/rajsomesetty/app-frontend:frontend-${{ github.run_id }}
